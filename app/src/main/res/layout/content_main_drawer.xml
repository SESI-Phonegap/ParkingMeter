<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sesi.parkingmeter.MainDrawerActivity"
    tools:showIn="@layout/app_bar_main_drawer">

    <RelativeLayout
        android:id="@+id/relativeMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/contador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cero"
                android:textAlignment="center"
                android:textSize="@dimen/ContadorSize"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativetitle"
                android:layout_below="@id/contador"
                android:layout_marginStart="@dimen/marginStartEnd"
                android:layout_marginEnd="@dimen/marginStartEnd">

                <TextView
                    android:id="@+id/titlefecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fecha"
                    android:textSize="@dimen/subtitle" />

                <TextView
                    android:id="@+id/titlehora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/horadepago"
                    android:textSize="@dimen/subtitle"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativetitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativetitle"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="@dimen/marginStartEnd"
                android:layout_marginEnd="@dimen/marginStartEnd">

                <TextView
                    android:id="@+id/cardviewFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fechaDefault"
                    android:textSize="@dimen/subtitle"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/cardviewHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/horaDefault"
                    android:textSize="@dimen/subtitle"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativetitle2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:text="@string/iniciar"
                    android:textStyle="bold"
                    android:layout_toStartOf="@+id/btnCancelar"/>

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:text="@string/cancelar"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_marginTop="@dimen/marginTop"
            android:layout_below="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStartEnd"
            android:layout_marginEnd="@dimen/marginStartEnd">



            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutHora"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint="@string/horadepago"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInputEditTextHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutGasto"
                android:layout_below="@+id/textInputLayoutHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/gasto">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
